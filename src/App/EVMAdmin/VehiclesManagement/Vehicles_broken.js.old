          console.log(`üîÑ Strategy 3: Creating fallback mock key...`);
          uploadedKey = `fallback-key-${Date.now()}-${i}-${file.name.replace(/[^a-zA-Z0-9]/g, '')}`;
          uploadSuccess = true;
          console.log(`‚úÖ Strategy 3 SUCCESS: Generated mock key "${uploadedKey}"`);
          
          errors.push({
            file: file.name,
            error: lastError?.message || 'All upload strategies failed',
            usedFallback: true
