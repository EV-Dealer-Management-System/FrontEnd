      console.log(`üîë Final attachment keys:`, uploadedKeys);
      
      if (errors.length > 0) {
        console.log(`‚ö†Ô∏è  ${errors.length} files used fallback keys:`, errors);
      }
      
      return {
        success: true,
        keys: uploadedKeys,
        keysCount: uploadedKeys.length,
        filesCount: files.length,
        errors: errors,
        hasPartialFailures: errors.length > 0,
        message: errors.length === 0 
          ? `‚úÖ Upload th√†nh c√¥ng ${uploadedKeys.length} ·∫£nh!`
